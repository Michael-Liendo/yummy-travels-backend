{
    "openapi": "3.0.0",
    "info": {
      "title": "My API",
      "version": "1.0.0"
    },
    "servers": [
      {
        "url": "http://localhost:3000"
      }
    ],
    "paths": {
      "/trip/book": {
        "post": {
          "summary": "Books a trip",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BookTripRequest"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Success"
            },
            "400": {
              "description": "Bad Request"
            },
            "500": {
              "description": "Internal Server Error"
            }
          }
        }
      },
      "/trip/transaction": {
        "post": {
          "summary": "Performs a transaction",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TransactionRequest"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Success",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/TransactionResponse"
                  }
                }
              }
            },
            "400": {
              "description": "Bad Request"
            },
            "500": {
              "description": "Internal Server Error"
            }
          }
        }
      },
      "/trip/available": {
        "get": {
          "summary": "Gets all available trips",
          "parameters": [
            {
              "name": "city",
              "in": "query",
              "description": "Filter trips by city",
              "schema": {
                "type": "string"
              }
            },
            {
              "name": "date",
              "in": "query",
              "description": "Filter trips by date",
              "schema": {
                "type": "string",
                "format": "date"
              }
            },
            {
              "name": "limit",
              "in": "query",
              "description": "Limit the number of results",
              "schema": {
                "type": "integer",
                "minimum": 1,
                "maximum": 100
              }
            },
            {
              "name": "take",
              "in": "query",
              "description": "Takes the first n results",
              "schema": {
                "type": "integer",
                "minimum": 1,
                "maximum": 100
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Success",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/Trip"
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Internal Server Error"
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "BookTripRequest": {
          "type": "object",
          "properties": {
            "tripId": {
              "type": "number"
            },
            "transactionId": {
              "type": "number"
            },
            "count": {
              "type": "integer"
            }
          },
          "required": [
            "name",
            "date"
          ]
        },
        "TransactionRequest": {
          "type": "object",
          "properties": {
            "tripId": {
              "type": "number"
            },
            "count": {
              "type": "number"
            }            
          },
          "required": [
            "tripId",
            "count"
          ]
        },
        "TransactionResponse": {
          "type": "object",
          "properties": {
            "transactionId": {
              "type": "integer"
            }
          },
          "required": [
            "transactionId"
          ]
        },
        "Trip": {
          "type": "object",
          "properties": {
            "id": {
              "type": "number"
            },
            "type": {
              "type": "string",
              "enum": [
                "bus",
                "ship",
                "flight"
              ]
            },
            "price": {
              "type": "number"
            },
            "city": {
              "type": "string"
            },
            "destination": {
              "type": "string"
            },
            "date": {
              "type": "string",
              "format": "date"
            },
            "time": {
              "type": "string",
              "format": "time"
            },
            "arrivalDate": {
              "type": "string",
              "format": "date"
            },
            "arrivalHour": {
              "type": "string",
              "format": "time"
            }
          },
          "required": [
            "id",
            "type",
            "price",
            "city",
            "destination",
            "date",
            "time",
            "arrivalDate",
            "arrivalHour"
          ]
        },
        "Transaction": {
          "type": "object",
          "properties": {
            "transactionId": {
              "type": "number"
            },
            "routeId": {
              "type": "number"
            },
            "price": {
              "type": "number"
            },
            "date": {
              "type": "string",
              "format": "date"
            },
            "ticketId": {
              "type": "number"
            },
            "completed": {
              "type": "boolean"
            }
          },
          "required": [
            "transactionId",
            "routeId",
            "price",
            "date",
            "ticketId",
            "completed"
          ]
        }
      }
    }
  }